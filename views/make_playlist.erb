<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<form action="/make_playlist" method="POST" enctype="/">
  <div class="wrapper">
  <select id="audiofiles" multiple size="3" class="selection" name = 'picked_songs[]'>
    <% @audio_files.each do |file|%>
    <option value = <%= file.id %>><%= file.id %> <%= file.original_title %></option>
    <% end %>
  </select>
  </div>
  <label for="name">name of the playlist</label>
  <input type="text" name="name" />
  <input type="submit" value="Make playlist">
</form>
<div id="blank">

</div>